{% style %}
    .banber-container{
       position:relative
    }
    .banber-container img {
        width:100%;
        height:100%;
        object-fit:cover;
        max-height:830px;
    }
    .banber-container .banner__content{
        position:absolute;
        top:0;
        left:0;
        width:100%;
        height:100%;
        text-align:center;
        display:flex;
        justify-content:center;
        align-items:center
    }
    .banner__content h2 {
        font-size:4.1rem;
        font-weight:700;
        text-transform:uppercase;
        font-family:var(--font-family-1);
        color:var(--color-white)
    }
{% endstyle %}
<div class="banber-container {% unless section.settings.is_full_width %} page-container {% endunless %}">
    <img
        src="{{section.settings.image | img_url:'large'}}"
        width="auto"
        height="auto"
        loading="lazy"
    />
  
    <div class="banner__content ">
        <div class="page-width">
            <h2>{{ section.settings.title }}</h2>
        </div>
    </div>
</div>

{% schema %}
{
    "name":"Banner image",
    "settings":[
        {
            "type":"image_picker",
            "id":"image",
            "label":"Image"
        },
        {
            "type":"checkbox",
            "id":"is_full_width",
            "label":"Full width",
            "default":true
        },
        {
            "type":"text",
            "id":"title",
            "label":"Title",
            "default":"This is Title"
        }

    ],
    "presets":[
        {
            "name":"Banner image"
        }
    ]
}
{% endschema %}