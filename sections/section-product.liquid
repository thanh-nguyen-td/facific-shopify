{% style %}
.product__heading {
    text-align:center;
    margin-bottom:5rem
}
.product__heading h2{
    font-size:16px; 
    font-weight:700;
    font-family:var(--font-family-1);
}
    .product__card {
        position: relative;
        margin-bottom:3rem
    }
    .product__card .product__wrap-img {
        width:100%; 
        height:294px;
        position:relative;
    }
    .product__card img {
        width:100%; 
        height:100%
    }
    .product__card-content {
        display:none
    }
    .product__card:hover .product__card-content {
        position: absolute;
        width:100%;
        height:100%;
        top:0;
        left:0;
        background-color: rgba(0, 0, 0, 0.4);
        display:flex;
        justify-content:center;
        align-items:center;
        color:#fff;
        flex-direction: column;
    }
    .product__card:hover .product__wrap-sale{
        opacity:5
    }
    .product__card-content h4 {
        font-size:18px;
        font-weight:700;
        font-family:var(--font-family-1);
        color:var(--color-white);
        text-transform:uppercase;
        margin:0
    }
    .product__card-content .product__card-vendor {
        font-size:12px;
        font-weight:500;
        font-family:var(--font-family-1);
        color:var(--color-white);
    }
    .product__card-content h4 {
        font-size:17px;
        font-weight:400;
        font-family:var(--font-family-3);
        color:var(--color-white);
    }
    .product__wrap-sale{
        background:var(--color-orange); 
        position:absolute; 
        bottom:0; 
        right:0;
    }
    .product__wrap-sale p{
        font-size:12px;
        font-family:var(--font-family-1);
        color:var(--color-white);
        text-transform:uppercase;
        margin:5px 10px
    }
    @media screen and (max-width:1200px) {
        .product__card .product__wrap-img {
        height:225px
        }
    }
    @media screen and (max-width:992px) {
        .product__card .product__wrap-img {
        height:176px
        }
        .product__card:hover .product__card-content,
        .product__card-content{
            position:static;
            display:flex;
            justify-content:center;
            align-items:center;
            flex-direction: column;
            background-color: rgba(0, 0, 0, 0);
        }
        .product__card-content h4 {
            color:var(--color-black)
        }
        .product__card-content .product__card-vendor {
            color:var(--color-black);
            margin-bottom: 8px;
        }
        .product__card-content .product__card-price{
            color:var(--color-black);
            margin-top: 8px;
            margin-bottom: 0px;
        }
    }
    @media screen and (max-width:768px) {
        .product__card .product__wrap-img {
        height:170px
        }
    }
    @media screen and (max-width:576px) {
        .product__card .product__wrap-img{
        height:130px
        }
    }
{% endstyle %}
<div class="page-width">
<div class="product__heading">
   <h2> CUSTOMER FAVORITES</h2>
</div>
<div class="custom-grid">
    <div class="custom-row">
        {% for product in collections[section.settings.collection].products limit: 6 %}
            <div class="custom-col col-xl-4 col-lg-4 col-md-6 col-sm-6 custom-col-6">
              {% render 'card-custom-product', product: product %}
            </div>
        {% endfor %}
     </div>
</div>
</div>
{% schema %}
    {
        "name":"Section product",
        "settings":[
                    {
                        "type":"collection",
                        "id":"collection",
                        "label":"Collection"
                    }
                ],
        "presets":[
            {
                "name":"Section product"
            }
        ]
    }
{% endschema %}