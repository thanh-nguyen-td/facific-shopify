{% style %}
    .product__card {
        position: relative;
        margin-bottom:3rem
    }
    .product__card-content {
        display:none
    }
    .product__card:hover .product__card-content {
        position: absolute;
        width:100%;
        height:100%;
        top:0;
        left:0;
        background-color: rgba(0, 0, 0, 0.4);
        display:flex;
        justify-content:center;
        align-items:center;
        color:#fff;
        flex-direction: column;
    }
    
    .product__card-content h4 {
        font-size:18px;
        font-weight:700;
        font-family:var(--font-family-1);
        color:var(--color-white);
        text-transform:uppercase;
        margin:0
    }
    .product__card-content .product__card-vendor {
        font-size:12px;
        font-weight:500;
        font-family:var(--font-family-1);
        color:var(--color-white);
    }
    .product__card-content h4 {
        font-size:17px;
        font-weight:400;
        font-family:var(--font-family-3);
        color:var(--color-white);
    }
{% endstyle %}
<div class="page-width">
 Product
{%- comment -%} <div class="custom-grid">
    <div class="custom-row">
        <div class="custom-col col-xl-4 col-lg-3 col-sm-2 custom-col-1">thanh</div>
        <div class="custom-col col-xl-4 col-lg-3 col-sm-2 custom-col-1">thanh1</div>
        <div class="custom-col col-xl-4 col-lg-3 col-sm-2 custom-col-1">thanh2</div>
        <div class="custom-col col-xl-4 col-lg-3 col-sm-2 custom-col-1">thanh3</div>
        <div class="custom-col col-xl-4 col-lg-3 col-sm-2 custom-col-1">thanh4</div>
     </div>
</div> {%- endcomment -%}
<div class="custom-grid">
    <div class="custom-row">
        {% for product in collections[section.settings.collection].products limit: 6 %}
            <div class="custom-col col-xl-4 col-lg-3 col-sm-2 custom-col-1">
                <div class="product__card" style="background: red; height:294px">
                    <img
                        srcset="{%- if product.featured_media.width >= 165 -%}{{ product.featured_media | image_url: width: 165 }} 165w,{%- endif -%}
                    {%- if product.featured_media.width >= 360 -%}{{ product.featured_media | image_url: width: 360 }} 360w,{%- endif -%}
                    {%- if product.featured_media.width >= 533 -%}{{ product.featured_media | image_url: width: 533 }} 533w,{%- endif -%}
                    {%- if product.featured_media.width >= 720 -%}{{ product.featured_media | image_url: width: 720 }} 720w,{%- endif -%}
                    {%- if product.featured_media.width >= 940 -%}{{ product.featured_media | image_url: width: 940 }} 940w,{%- endif -%}
                    {%- if product.featured_media.width >= 1066 -%}{{ product.featured_media | image_url: width: 1066 }} 1066w,{%- endif -%}
                    {{ product.featured_media | image_url }} {{ product.featured_media.width }}w"
                        src="{{ product.featured_media | img_url: 'large' }}" 
                        loading="lazy" 
                        width="{{ product.featured_media.width }}"
                        height="{{ product.featured_media.height }}"
                        class=""
                        style="width:100%; height:294px"
                    />
                    {%- comment -%} <p class="product__card-vendor"> {%- endcomment -%}
                    <div class="product__card-content">
                       <p class="product__card-vendor">
                        {{ product.vendor }}
                       </p>
                        <h4>
                            {{ product.title }}
                        </h4>
                        <p  class="product__card-price">
                            {% if product.compare_at_price > product.price %}
                                {{ product.compare_at_price | money_with_currency }}
                                {% else %}
                                {{product.price | money_with_currency }}
                            {% endif %}
                        </p>
                    </div>
                </div>
            </div>
        {% endfor %}
     </div>
</div>
</div>
