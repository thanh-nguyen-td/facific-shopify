{% style %}
    .banber-container{
       position:relative;
       margin-top:5rem;
       margin-bottom:4rem
    }
    .banber-container img {
        width:100%;
        height:100%;
        object-fit:cover;
        max-height:600px;
    }
    .banber-container .banner__content{
        position:absolute;
        top:0;
        left:0;
        width:100%;
        height:100%;
        text-align:center;
        display:flex;
        justify-content:center;
        align-items:center
    }
    .banner__content-child {
        background:var(--color-white-bg);
        max-width:540px;
        padding:20px;
    }
    .banner__content-child p {
        color:var(--color-balck);
        font-family:var(--font-family-3);
    }
    .banner__content-child a{
        color:var(--color-orange);
        font-family:var(--font-family-3);
    }
    .banner__content h2 {
        font-size:4.1rem;
        font-weight:700;
        text-transform:uppercase;
        font-family:var(--font-family-1);
        color:var(--color-black)
    }
    .banner-info p {
        color:var(--color-black);
        font-family:var(--font-family-3);
    }
    @media screen and (max-width:768px) {
        .banber-container .banner__content{
            position:static
        }
    }
{% endstyle %}
<div class="page-width">
    <div class="banber-container">
        <img
            src="{{section.settings.image | img_url:'large'}}"
            width="auto"
            height="auto"
            loading="lazy"
        />
      
        <div class="banner__content ">
            <div class="banner__content-child">
                <h2>WORKSHOP</h2>
                <p>
                    This is a demo store. Thanks to the folks over at <a>S.E.H Kelly</a> for allowing us
                    to use their wonderful imagery in this demo store. Head over to their 
                    website to <a>shop</a> these pieces for real.
                </p>
                <div class="banner-info">
                    {{ section.settings.des }}
                </div>
            </div>
        </div>
    </div>
</div>

{% schema %}
{
    "name":"Section banner",
    "settings":[
        {
            "type":"image_picker",
            "id":"image",
            "label":"Image"
        },
        {
            "type":"text",
            "id":"title",
            "label":"Title",
            "default":"This is Title"
        },
        {
            "type":"richtext",
            "id":"des",
            "label":"Des",
            "default":"<p>This is Des</p>"
        }
        
    ],
    "blocks":[
       {
        "type":"text",
        "name":"Text",
        "settings":[
                {
                "type":"richtext",
                "id":"des",
                "label":"Des",
                "default":"<p>This is Des</p>"
                }
            ]
       }
    ],
    "presets":[
        {
            "name":"Section banner"
        }
    ]
}
{% endschema %}