{% style %}
    .banber-container{
       position:relative
    }
    .banber-container img {
        width:100%;
        height:100%;
        object-fit:cover;
        max-height:830px;
    }
    .banber-container .banner__content{
        position:absolute;
        top:0;
        left:0;
        width:100%;
        height:100%;
        text-align:center;
        display:flex;
        justify-content:center;
        align-items:center
    }
    .banner__content h2 {
        font-size:4.1rem;
        font-weight:700;
        text-transform:uppercase;
        font-family:var(--font-family-1);
        color:var(--color-white)
    }
{% endstyle %}
<div class="banber-container">
    <img
        src="https://znews-photo.zingcdn.me/w660/Uploaded/kbd_bcvi/2019_11_23/5d828de46f24eb2ed3491582_1.jpg"
        width="auto"
        height="auto"
        loading="lazy"
    />
  
    <div class="banner__content ">
        <div class="page-width">
            <h2>WORKSHOP</h2>
            <p>
                This is a demo store. Thanks to the folks over at S.E.H Kelly for allowing us
                to use their wonderful imagery in this demo store. Head over to their 
                website to shop these pieces for real.
            </p>
           <div>
            <p>
                1221 Broad Street
            </p>
            <p>
                Open Sundays: 12 - 5
            </p>
            <p>
                +1 (250) 555-5555
            </p>
           </div>
        </div>
    </div>
</div>

{% schema %}
{
    "name":"Section banner",
    "settings":[
        {
            "type":"image_picker",
            "id":"image",
            "label":"Image"
        },
        {
            "type":"text",
            "id":"title",
            "label":"Title",
            "default":"This is Title"
        }
        
    ],
    "blocks":[
       {
        "type":"text",
        "name":"Text",
        "settings":[
                {
                "type":"richtext",
                "id":"des",
                "label":"Des",
                "default":"<p>This is Des</p>"
                }
            ]
       }
    ],
    "presets":[
        {
            "name":"Section banner"
        }
    ]
}
{% endschema %}