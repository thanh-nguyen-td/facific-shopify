{% style %}
 .section-detail-product {
    display:flex;
    justify-content:center;
    flex-direction: column;
    align-items:center
 }
 .section-detail-product .product-wrap-list-img{
    margin-top:2rem;
    padding-bottom:2rem;
    border-bottom:1px solid var(--color-border);
    display:flex;
    justify-content:center;
      
 }
    .section-detail-product .product-list-img {
        display: inline-table;
        width:50px;
        height:50px;
       margin:5px;
        background:red;

    }
    .product-list-img img:hover {
        border:2px solid var(--color-black)
    }
    .product-list-img img {
        width:100%;
        height:100%
    }
    .product-wrap-select {
       
        padding-top:2rem
    }
    .section-detail-product .product-price p {
        font-size:15px;
        font-weight:400;
        font-family:var(--font-family-3);
        margin-top:2rem;
    }
    .product-button-group{
        width:100%;
        display:flex;
        justify-content:center;
        align-items:center;
        margin:3rem auto
    }
    .product-button-group button{
        height:50px;
        font-size:17px;
        font-family:var(--font-family-2);
        font-weight:700;
        padding:10px 20px;
        width:100%;
        max-width:280px;
        margin:auto 5px;
        display: flex;
        justify-content: center;
        align-items: center;
        border:0;
        border-radius:3px
    }
    .product-button-group .bnt-add {
        background:#cfbb99;
        color:var(--color-black);
        text-transform: uppercase;
        font-size:15px;
        font-family:var(--font-family-1);
        font-weight:600;
    }
    .product-button-group .bnt-shop {
        background:#5a31f4;
        color:var(--color-white);
        font-size:14px;
        font-weight:500;
        font-family:var(--font-family-3);
    }
    .bnt-shop span{
        margin-right:3px
    }
    .product-des {
        text-align:center;
        max-width:800px
    }
    .product-des p{
       font-size:17px;
       font-weight:400;
       font-family:var(--font-family-3);
       color:var(--color-black)
    }
    .product-des h6{
       font-size:14px;
       font-weight:700;
       font-family:var(--font-family-1);
       color:var(--color-black)
    }
    .product-des a{
       color:var(--color-orange)
    }
    .product-show-view {
        margin-top:2rem
    }
    .product-show-view a{
        color:var(--color-orange);
        font-size:17px;
        font-weight:400;
        font-family:var(--font-family-3);
    }
    .product-show-view a:hover{
       color:#7f3f16
    }
{% endstyle %}
<div class="page-width">
    {% assign product = section.settings.product %}
    <div class="section-detail-product">
        <h1>{{product.title}}</h1>
        <h4>{{ product.vendor }}</h4>
        <div class="product__wrap-img" >
            <img
                srcset="{%- if product.featured_media.width >= 165 -%}{{ product.featured_media | image_url: width: 165 }} 165w,{%- endif -%}
            {%- if product.featured_media.width >= 360 -%}{{ product.featured_media | image_url: width: 360 }} 360w,{%- endif -%}
            {%- if product.featured_media.width >= 533 -%}{{ product.featured_media | image_url: width: 533 }} 533w,{%- endif -%}
            {%- if product.featured_media.width >= 720 -%}{{ product.featured_media | image_url: width: 720 }} 720w,{%- endif -%}
            {%- if product.featured_media.width >= 940 -%}{{ product.featured_media | image_url: width: 940 }} 940w,{%- endif -%}
            {%- if product.featured_media.width >= 1066 -%}{{ product.featured_media | image_url: width: 1066 }} 1066w,{%- endif -%}
            {{ product.featured_media | image_url }} {{ product.featured_media.width }}w"
                src="{{ product.featured_media | img_url: 'large' }}" 
                loading="lazy" 
                width="{{ product.featured_media.width }}"
                height="{{ product.featured_media.height }}"
            />
            <div class="product-wrap-list-img">
                {% for image in product.images %}
                   <div class="product-list-img">
                        <img src="{{image.src | img_url:'large'}}"/>
                   </div>
                {% endfor %}
               </div>
        </div>
        <div class="product-wrap-select">
            <label class="custom-select">
                Size
                <select name="sample">
                  <option value="1">one</option>
                  <option value="2">two</option>
                  <option value="3">three</option>
                </select>
              </label>
              <label class="custom-select">
                Color
                <select name="sample">
                  <option value="1">one</option>
                  <option value="2">two</option>
                  <option value="3">three</option>
                </select>
              </label>
        </div>
        <div class="product-price">
            <p>
                {% if product.compare_at_price > product.price %}
                    {{ product.compare_at_price | money_with_currency }}
                    {% else %}
                    {{product.price | money_with_currency }}
                {% endif %}
            </p>
        </div>
        <div class="product-button-group">
            <button class="bnt-add"> Add to cart</button>
            <button class="bnt-shop">
               <span> Buy with </span>
                <svg preserveAspectRatio="xMidYMid" class="qZgSr5RiiBCTAMfQYsty" style="height: 24px; width: 82px;"><use xlink:href="#shopify-svg__payments-shop-pay"></use></svg>
            </button>
        </div>
        <div class="product-des">
            <p>
                With cotton airweave from a mill in the mountains, horn buttons from the West Midlands, and leather lacing from a leather tannery. The jacket fits true to size, but for a slim fit, consider going down a size. The field jacket is mostly cotton, yes, but several aspects are not. The leather drawstring, for example, and the horn buttons. Thus it is best to wash it only by hand, in lukewarm water, and to avoid the washing machine at all costs. Dry-cleaning is the second-best option.
            </p>
            <h6>
                THIS IS A DEMO STORE. YOU CAN PURCHASE PRODUCTS LIKE THIS FROM 
                <a href="#">S.E.H. KELLY.</a>
            </h6>
        </div>
        <div class="product-show-view">
            <a href="#">View Product</a>
        </div>
    </div>
</div>
{% schema %}
    {
        "name":"Section detail product",
        "settings":[
                    {
                        "type":"collection",
                        "id":"collection",
                        "label":"Collection"
                    },
                    {
                        "type": "product",
                        "id": "product",
                        "label": "t:sections.featured-product.settings.product.label"
                    }
                ],
        "presets":[
            {
                "name":"Section detail product"
            }
        ]
    }
{% endschema %}